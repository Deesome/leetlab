generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRole{
  ADMIN
  USER
}

model User{
  id String @id @default(uuid())
  name String?
  email String @unique
  image String?
  role userRole @default(USER)
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}